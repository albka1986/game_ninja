<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/game_result_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAME RESULT"
            android:textColor="#ffffff"
            android:textSize="40sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_result_TV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Total enemies: "
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/total_enemies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_result_TV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Killed enemies: "
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/killed_enemies_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_result_TV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Spent time: "
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_middle" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 sec"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_size_middle" />

        </LinearLayout>


        <Button
            android:id="@+id/okBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="OK"
            android:textSize="20sp" />

        <Button
            android:id="@+id/restartBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="Restart"
            android:textSize="20sp" />


    </LinearLayout>

</ScrollView>